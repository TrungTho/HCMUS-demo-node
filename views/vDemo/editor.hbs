{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/ezd73nxbzc7bu6e86g2l82jbbffke0mwevwrnyvc5q8h89j6/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#FullDes'
    });
</script>
{{/section}}

<form action="" method="post">
    <div class="card">
        <div class="card-header">
            WYSWYG Editor
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="FullDes">Full Description</label>
                <textarea type="text" class="form-control" name="FullDes" id="FullDes" cols="30" rows="20"></textarea>
            </div>

        </div>
        <div class="card-footer text-muted">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>