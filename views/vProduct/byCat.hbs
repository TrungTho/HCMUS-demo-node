{{#section 'js'}}
<script>
  $('.addToCartButton').on('click', function () {
    const id = $(this).data('productid');
    //console.log(id);
    $('#txtProid').val(id);
    $('#txtQuantity').val("1");
    $('#formAddToCart').submit();
  })
</script>
{{/section}}

<form action="/cart/add" method="POST" id="formAddToCart">
  <input type="hidden" name="proid" id="txtProid">
  <input type="hidden" name="quantity" id="txtQuantity">
</form>

<div class="card">
  <div class="card-header">Category</div>
  <div class="card-body">
    {{#if this.isEmpty}}
    <h4 class="card-title">No data</h4>
    <p class="card-text">Text</p>
    {{else}}
    <div class="row">
      {{#each this.products}}
      <div class="col-sm-4 mb-3">
        <div class="card h-100">
          <img src="/public/imgs/sp/{{ProID}}/main_thumbs.jpg" class="card-img-top" alt="{{ProName}}"
            title="{{ProName}}">
          <div class="card-body">
            <h5 class="card-title">{{ProName}}</h5>
            <h5 class="card-title text-danger">{{format Price}}</h5>
            <p class="card-text">{{TinyDes}}</p>
          </div>
          <div class="card-footer text-muted">
            <a href="/products/detail/{{ProID}}" class="btn btn-outline-primary">Detail</a>
            {{#if ../isLogin}}
            <a data-productid="{{ProID}}" href="#" class="btn btn-outline-success addToCartButton">
              Add to cart
            </a>
            {{/if}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
  <div class="card-footer text-muted">Footer</div>
</div>;