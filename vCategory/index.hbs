<div class="card">
  <div class="card-header">Category</div>
  <div class="card-body text-center">
    <a class="btn btn-outline-primary" href="/admin/categories/add" role="button">
      New Category
      <i class="fa fa-plus" aria-hidden="true"></i>
    </a>
  </div>
  <div class="card-body">
    {{#if this.isEmpty}}
    <h4 class="card-title">No data</h4>
    <p class="card-text">Text</p>
    {{else}}
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.categories}}
        <tr>
          <th scope="row">{{this.CatID}}</th>
          <td>{{this.CatName}}</td>
          <td class="text-left">
            <a name="" id="" class="btn-sm btn-success" href="/admin/categories/{{CatID}}" title="Edit" role="button">
              <i class="fa fa-pencil" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{/if}}
  </div>
  <div class="card-footer text-muted">Footer</div>
</div>;